#!/bin/sh

case $BUTTON in
    1) $TERMINAL -e pulsemixer;;
    3) notify-send "Volume module" "Shows volume ï€¨ , ïª€ if muted.
- Middle click to mute." ;;
    2) pamixer -t ;;
esac

volstat="$(pactl list sinks)"
# volstat="$(amixer get Master)" # ALSA only equivalent.

# echo "$volstat" | grep -q "Mute: yes" && printf "ğŸ”‡\\n" && exit
echo "$volstat" | grep -q "Mute: yes" && printf "ïª€\\n" && exit

vol="$(pamixer --get-volume)"

icon="ï€"

 if [ "$vol" -gt "70" ]; then
 	icon="ï€¨"
 elif [ "$vol" -lt "30" ]; then
 	icon="ï€¦"
 else
 	icon="ï€§"
 fi

printf "%s %s%%\\n" "$icon" "$vol"
