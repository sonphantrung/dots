set notification-bg             "#131111"
set notification-fg             "#8abeb7"

set notification-error-bg       "#131111"
set notification-error-fg       "#822a2a"

set notification-warning-bg     "#131111"
set notification-warning-fg     "#822a2a"

set highlight-color             "#c97941"
