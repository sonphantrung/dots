general {
        output_format = "i3bar"
		colors = true
        interval = 1
}

#order += "wireless _first_"
order += "disk /"
order += "disk /home"
order += "load"
order += "memory"
order += "tztime local"

#wireless _first_ {
#        format_up = "%essid"
#        format_down = "down"
#}

disk "/" {
        format = "%avail"
}


disk "/home" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%d/%m/%y (%a) %H:%M"
}
