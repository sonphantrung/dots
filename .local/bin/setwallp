#!/bin/sh

# Muh wall setter script

wallfile=$1

[ -f "$wallfile" ] && [ -n "$wallfile" ] && readlink -f "$wallfile" > ~/.config/.lastwalldir || break

# If pywal is installed, use it.
#command -v wal >/dev/null 2>&1 &&
#	wal -i "$(cat ~/.config/.lastwalldir)" -o "${XDG_CONFIG_HOME:-$HOME/.config}/wal/postrun" >/dev/null 2>&1 &&
#	pidof dwm >/dev/null && xdotool key super+F12

xwallpaper --zoom "$(cat ~/.config/.lastwalldir)"
